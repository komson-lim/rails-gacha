-# frozen_string_literal: true
= simple_form_for(@redeem_code) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :code
    = f.input :amount
    = f.input :status

  .form-actions
    = f.button :submit
